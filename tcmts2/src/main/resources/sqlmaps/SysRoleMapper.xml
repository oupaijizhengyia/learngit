<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tangu.tcmts.dao.SysRoleMapper" >
  <resultMap id="BaseResultMap" type="com.tangu.tcmts.po.SysRole" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="parent_role" property="parentRole" jdbcType="INTEGER" />
    <result column="rolename" property="rolename" jdbcType="VARCHAR" />
    <result column="describe" property="describe" jdbcType="VARCHAR" />
  </resultMap>
  <select id="listRoles" resultMap="BaseResultMap" >
    select 
    id, parent_role, rolename, `describe`
    from sys_role
  </select>
  <delete id="deleteSysRole" parameterType="java.lang.Integer" >
    delete from sys_role
    where id = #{id,jdbcType=INTEGER}
  </delete>
  <insert id="insertSysRole" parameterType="com.tangu.tcmts.po.SysRole" >
    <selectKey resultType="java.lang.Integer" keyProperty="id" order="AFTER" >
      SELECT LAST_INSERT_ID()
    </selectKey>
    insert into sys_role
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="parentRole != null" >
        parent_role,
      </if>
      <if test="rolename != null" >
        rolename,
      </if>
      <if test="describe != null" >
        `describe`,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="parentRole != null" >
        #{parentRole,jdbcType=INTEGER},
      </if>
      <if test="rolename != null" >
        #{rolename,jdbcType=VARCHAR},
      </if>
      <if test="describe != null" >
        #{describe,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>
  <insert id="insertSysRoleFunction" parameterType="com.tangu.tcmts.po.SysRole">
    <selectKey resultType="java.lang.Integer" keyProperty="id" order="AFTER">
      SELECT LAST_INSERT_ID()
    </selectKey>
    INSERT INTO sys_role_function(role_id,function_id)
    VALUES
    <foreach collection="functionList" item="item" index="index" separator=",">
      (#{id},#{item.id})
    </foreach>
  </insert>
  <insert id="insertSysRoleModule" parameterType="com.tangu.tcmts.po.SysRole">
    <selectKey resultType="java.lang.Integer" keyProperty="id" order="AFTER">
      SELECT LAST_INSERT_ID()
    </selectKey>
    INSERT INTO sys_role_module(role_id,module_id)
    VALUES
    <foreach collection="moduleList" item="item" index="index" separator=",">
      (#{id},#{item.id})
    </foreach>
  </insert>

  <update id="updateSysRole" parameterType="com.tangu.tcmts.po.SysRole" >
    update sys_role
    <set >
      <if test="parentRole != null" >
        parent_role = #{parentRole,jdbcType=INTEGER},
      </if>
      <if test="rolename != null" >
        rolename = #{rolename,jdbcType=VARCHAR},
      </if>
      <if test="describe != null" >
        `describe` = #{describe,jdbcType=VARCHAR},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>


</mapper>